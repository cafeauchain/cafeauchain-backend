<%= render 'admin/shared/breadcrumbs' %>

<div class="row">
  <div class="col-sm-6">
    <section class="panel">
      <header class="panel-heading">Plans
        <%= link_to 'View Plans', admin_plans_path, class: 'btn btn-xs btn-primary pull-right' %>
      </header>
      <table class="table table-striped table-hover table-advanced">
        <tbody>
          <tr>
            <th>Plan Name</th>
            <th>Interval</th>
            <th>Price</th>
            <th>Stripe ID</th>
          </tr>
          <% @plans.each do |plan| %>
            <tr>
              <td><%= plan.name %></td>
              <td><%= plan.interval.humanize %></td>
              <td><%= sprintf("%0.2f", plan.price_in_cents.to_f / 100) %></td>
              <td><%= plan.stripe_plan_id %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>
  </div>
  <div class="col-sm-6">
    <%= react_component("HelloWorld", { greeting: "Hello from react-rails." }) %>
  </div>
</div>

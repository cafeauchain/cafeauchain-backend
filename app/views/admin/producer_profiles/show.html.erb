<section class="panel">
  <header class="panel-heading">
    Producer Profiles
  </header>
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header"><%= @producer.name %></h3>
    </div>
  </div>

  <p>
    <strong>Location:</strong>
    <%= @producer.location %>
  </p>

  <p>
    <strong>Wallet Address:</strong>
    <%= @producer.wallet_address %>
  </p>

  <p>
    <strong>Chain Name:</strong>
    <%= @producer.slug %>
  </p>
  <table class="table table-striped table-hover table-advance table-responsive">
    <thead>
      <tr>
        <th><i class="far fa-compass"></i> Name</th>
        <th><i class="fas fa-dna"></i> Varietal</th>
        <th><i class="fas fa-frog"></i> Zone</th>
        <th><i class="fas fa-warehouse"></i> Lot</th>
      </tr>
    </thead>

    <tbody>
      <% unless @crops.nil? %>
        <% @crops.each do |crop| %>
          <tr>
            <td><%= link_to crop.name, crop %></td>
            <td><%= crop.varietal %></td>
            <td><%= crop.zone %></td>
            <td><%= crop.bag_size %> bags: <%= crop.bags %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</section>
<section class="panel">
  <header class="panel-heading">
    Add a plan from Stripe
  </header>
  <%= form_for @plan, url: admin_plans_path, local: true, class: 'form' do |form| %>
    <% if @plan.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

        <ul>
        <% @plan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="panel-body">
      <div class="row">
        <div class="form-group col-sm-4">
          <%= form.label :name, class: 'control-label' %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group col-sm-4">
          <%= form.label :price_in_cents, class: 'control-label' %>
          <%= form.text_field :price_in_cents, class: 'form-control' %>
        </div>
        <div class="form-group col-sm-4">
          <%= form.label :stripe_plan_id, class: 'control-label' %>
          <%= form.text_field :stripe_plan_id, class: 'form-control' %>
        </div>
      </div>

      <div class="actions row">
        <div class="col-sm-12">
          <%= form.submit "Submit", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</section>

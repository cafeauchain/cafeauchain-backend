<%= render 'admin/shared/breadcrumbs' %>

<table class="table table-striped table-hover table-advanced">
  <tbody>
    <tr>
      <th>Plan Name</th>
      <th>Interval</th>
      <th>Price</th>
      <th>Stripe ID</th>
    </tr>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.interval.humanize %></td>
        <td><%= sprintf("%.2f", plan.price_in_cents.to_f / 100) %></td>
        <td><%= plan.stripe_plan_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add a plan", new_admin_plan_path, class: 'btn btn-primary' %>
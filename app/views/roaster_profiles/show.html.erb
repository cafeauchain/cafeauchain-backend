<section class="panel">
  <header class="panel-heading">
    Roaster Profile
  </header>

  <div class="col-sm-12">
    <%= image_tag url_for(@roaster_profile.logo) if !@roaster_profile.logo.attachment.nil? %>
    <p id="notice"><%= notice %></p>

    <div class="row">
      <div class="col-lg-12">
        <h3 class="page-header"><%= @roaster_profile.name %></h3>
      </div>
    </div>

    <p>
      <strong>Website:</strong>
      <%= link_to "Website", "http://#{@roaster_profile.url}" %>
    </p>

    <p>
      <strong>Twitter:</strong>
      <%= link_to "Twitter", "https://twitter.com/#{@roaster_profile.twitter}" %>
    </p>

    <p>
      <strong>Facebook:</strong>
      <%= link_to "Facebook", "https://facebook.com/#{@roaster_profile.facebook}" %>
    </p>
  
  </div>
</section>

<section class="panel">
  <header class="panel-heading">
    Transactions
  </header>

  <table class="table table-striped table-hover table-advance table-responsive">
    <thead>
      <tr>
        <th><i class="far fa-compass"></i> Producer</th>
        <th><i class="far fa-compass"></i> Crop Name</th>
        <th><i class="fas fa-dna"></i> Transaction Type</th>
        <th><i class="fas fa-warehouse"></i> Transaction ID</th>
        <th><i class="fas fa-frog"></i> Bags received</th>
      </tr>
    </thead>

    <tbody>
      <% if @transactions.nil? %>
        <h4>No transactions yet.</h4>
      <% else %>
        <% @transactions.each do |tx| %>
          <tr>
            <td><%= tx.crop.producer_profile.name %></td>
            <td><%= link_to tx.crop.name, tx.crop %></td>
            <td><%= tx.trans_type.to_s %></td>
            <td><%= tx.tx_id %></td>
            <td><%= tx.quantity %> bags</td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</section>

<%= link_to 'Edit', edit_roaster_profile_path(@roaster_profile) %> |
<%= link_to 'Back', roaster_profiles_path %>

<% content_for :body_class, 'login-img-body' %>
<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <img src="https://placekitten.com/100/100" class="image">
      <div class="content">
        Log in to your account
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "ui large form"}) do |f| %>
      <%= devise_error_messages! %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
          </div>
        </div>
        <%= f.submit "Log in", class: "ui fluid large teal submit button" %>
      </div>

      <div class="ui error message">
      </div>
    <% end %>

    <div class="ui message">
      New to us? <%= link_to "Sign Up", new_user_registration_path %>
    </div>
  </div>
</div>


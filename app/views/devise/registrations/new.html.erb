<% content_for :body_class, 'login-img-body' %>
<%= react_component "login", props = {
    user: current_user,
    loggedIn: user_signed_in?,
    url: registration_path(resource_name),
    resource: resource,
    name: resource_name,
    errors: devise_error_messages!,
    fieldType: "register"
} %>
<% if false %>


<div class="ui middle aligned center aligned grid">
  <div class="login-form column">
    <h2 class="ui teal image header">
      <img src="https://placekitten.com/100/100" class="image">
      <div class="content">
        Sign up for Proof of Perk
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "ui large form"}) do |f| %>
      <%= devise_error_messages! %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :name, autofocus: true, placeholder: "Your name" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, placeholder: "Email" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
          </div>
        </div>
        <%= f.submit "Sign Up", class: "ui fluid large teal submit button" %>
      </div>

      <div class="ui error message">
      </div>
    <% end %>
  </div>
</div>


<% end %>
